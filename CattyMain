-- AUTO SPELL SYSTEM - MAIN
-- ============================================

print("üöÄ Auto Spell Main - Loading components...")

local BASE_URL = "https://raw.githubusercontent.com/YOUR_USERNAME/roblox-auto-spell-system/main/"

local scripts = {
    UIManager = "https://raw.githubusercontent.com/m1zin07/CattyScript/refs/heads/main/CattyUI"
    SpellDetector = BASE_URL .. "SpellDetector.lua"
}

for name, url in pairs(scripts) do
    spawn(function()
        local success, err = pcall(function()
            loadstring(game:HttpGet(url))()
        end)
        if success then
            print("‚úÖ " .. name .. " loaded")
        else
            warn("‚ùå " .. name .. " failed: " .. tostring(err))
        end
    end)
end
