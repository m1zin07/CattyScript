local function createButton(text, icon, order, callback)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(1, 0, 0, 45)
	button.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
	button.BorderSizePixel = 0
	button.AutoButtonColor = false
	button.Text = ""
	button.LayoutOrder = order
	button.Parent = sidebar
	
	local btnCorner = Instance.new("UICorner")
	btnCorner.CornerRadius = UDim.new(0, 10)
	btnCorner.Parent = button
	
	local btnText = Instance.new("TextLabel")
	btnText.Size = UDim2.new(1, -45, 1, 0)
	btnText.Position = UDim2.new(0, 45, 0, 0)
	btnText.BackgroundTransparency = 1
	btnText.Text = text
	btnText.TextColor3 = Color3.fromRGB(200, 200, 205)
	btnText.TextSize = 16
	btnText.Font = Enum.Font.GothamMedium
	btnText.TextXAlignment = Enum.TextXAlignment.Left
	btnText.Parent = button
	
	local iconLabel = Instance.new("TextLabel")
	iconLabel.Size = UDim2.new(0, 35, 1, 0)
	iconLabel.Position = UDim2.new(0, 5, 0, 0)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Text = icon
	iconLabel.TextColor3 = Color3.fromRGB(200, 200, 205)
	iconLabel.TextSize = 20
	iconLabel.Font = Enum.Font.GothamBold
	iconLabel.Parent = button
	
	button.MouseEnter:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(65, 65, 70)}):Play()
	end)
	
	button.MouseLeave:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(50, 50, 55)}):Play()
	end)
	
	if callback then
		button.MouseButton1Click:Connect(callback)
	end
end

createButton("Home", "üè†", 1, function()
	sectionTitle.Text = "Home"
	wordContainer.Visible = false
	spellingContainer.Visible = false
end)

createButton("Auto Spell", "‚ú®", 2, function()
	sectionTitle.Text = "Auto Spell"
	wordContainer.Visible = true
	spellingContainer.Visible = true
end)

createButton("Settings", "‚öôÔ∏è", 3, function()
	sectionTitle.Text = "Settings"
	wordContainer.Visible = false
	spellingContainer.Visible = false
end)

createButton("About", "‚ÑπÔ∏è", 4, function()
	sectionTitle.Text = "About"
	wordContainer.Visible = false
	spellingContainer.Visible = false
end)

local dragging, dragInput, dragStart, startPos

mainFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = mainFrame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

mainFrame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - dragStart
		mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

_G.AutoSpellUI = {ScreenGui = screenGui, WordDisplay = wordDisplay, SpellingDisplay = spellingDisplay}
print("‚úÖ UI Manager loaded")
